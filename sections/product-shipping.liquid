<section class="sipping-success-sec">
        <div class="container">
            <div class="row">
                <div class="col-lg-8">
                    <div class="ss-heading">
                        <div class="ss-title-text">
                            <!-- <h6>Sipping success</h6> -->
                            <h6>{{ section.settings.sub-heading }}</h6>
                        </div>
                        <div class="ss-heading-text">
                            <!-- <h1>Stories from Our Happy Customers</h1> -->
                            <h1>{{ section.settings.heading }}</h1>
                        </div>
                    </div>
                </div>
            </div>
            <div class="owl-carousel owl-theme stories">
              {% for block in section.blocks %}
                <div class="item">
                    <div class="Stories-section">
                        <div class="Stories-review-main">
                            <div class="Stories-review-inner">
                                <div class="Stories-product">
                                    <!-- <img src="./images/stories-review-prosuxt-img.png"> -->
                                    <img src="{{ block.settings.left-img | img_url : 'master' }}">
                                </div>
                                <div class="Stories-right-side">
                                    <div class="Stories-top-box">
                                        <div class="Stories-ratting-box">
                                            <i class="fa-solid fa-star"></i>
                                            <!-- <b>4.8</b> -->
                                            <b>{{ block.settings.rate-num }}</b>
                                        </div>
                                        <div class="Stories-review-box">
                                            <!-- <h2>Talk about relaxation!</h2>
                                            <p>I fully enjoyed the experience. No overpowering cannabis taste and hit quicker than any other drink. </p> -->
                                            <h2>{{ block.settings.rate-title }}</h2>
                                            <p>{{ block.settings.rate-des }}</p>
                                        </div>
                                    </div>
                                    <div class="Stories-bottom-box">
                                        <div class="Stories-review-info">
                                            <!-- <b>Dennis P.</b> -->
                                            <b>{{ block.settings.rate-name }}</b>
                                            <div class="verify-box">
                                                <!-- <img alt="" src="./images/verify-icon.svg">
                                                <b>Verified Buyer</b> -->
                                                <img alt="" src="{{ block.settings.badge-img | img_url : 'master' }}">
                                                <b>{{ block.settings.rate-verified }}</b>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
