{% schema %}
  {
    "name": "Product Shipping",
    "settings": [
      {
        "type" : "text",
        "id" : "sub-heading",
        "label" : "Enter Sub Heading"
      },
      {
        "type" : "text",
        "id" : "heading",
        "label" : "Enter Heading"
      },
      {
        "type" : "text",
        "id" : "btn",
        "label" : "Enter Button Text"
      },
      {
        "type" : "url",
        "id" : "btn-url",
        "label" : "Enter Button Url"
      }
    ],
    "blocks" : [
      {
        "type" : "block",
        "name" : "block",
        "settings" : [
          {
            "type" : "image_picker",
            "id" : "left-img",
            "label" : "Select Image"
          },
          {
            "type" : "text",
            "id" : "rate-num",
            "label" : "Enter Rating Number"
          },
          {
            "type" : "text",
            "id" : "rate-title",
            "label" : "Enter Rating Title"
          },
          {
            "type" : "text",
            "id" : "rate-des",
            "label" : "Enter Rating Description"
          },
          {
            "type" : "text",
            "id" : "rate-name",
            "label" : "Enter Author Name"
          },
          {
            "type" : "image_picker",
            "id" : "badge-img",
            "label" : "Select Image"
          },
          {
            "type" : "text",
            "id" : "rate-verified",
            "label" : "Enter Text"
          }
        ]
      }
    ],
    "presets" : [
      {
        "name" : "Product Shipping"
      }
    ]
  }
{% endschema %}


<script>
